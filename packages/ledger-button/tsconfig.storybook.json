{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "out-tsc/storybook",
    "tsBuildInfoFile": "out-tsc/storybook/tsconfig.storybook.tsbuildinfo",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "types": [
      "node",
      "vite/client"
    ],
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "emitDeclarationOnly": true
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.stories.ts",
    "src/**/*.stories.js",
    "src/**/*.stories.jsx",
    "src/**/*.stories.tsx",
    "src/**/*.stories.mdx",
    ".storybook/*.js",
    ".storybook/*.ts",
    "src/**/*.png"
  ],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    }
  ]
}