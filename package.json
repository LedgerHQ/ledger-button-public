{
  "name": "@ledgerhq/ledger-button-workspace",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "commit": "gitmoji -c",
    "danger:local": "pnpm danger local --dangerfile tools/danger/danger-local.ts --base origin/develop",
    "danger:local:fork": "pnpm danger local --dangerfile tools/danger/danger-local-fork.ts --base origin/develop",
    "danger:ci": "pnpm danger ci --dangerfile tools/danger/danger-ci.ts --failOnErrors",
    "button": "pnpm --filter @ledgerhq/ledger-button",
    "button-accounts": "pnpm --filter @ledgerhq/ledger-button-accounts",
    "button-core": "pnpm --filter @ledgerhq/ledger-button-core",
    "button-dmk": "pnpm --filter @ledgerhq/ledger-button-dmk",
    "button-signer": "pnpm --filter @ledgerhq/ledger-button-signer",
    "pocs-webcomponent": "pnpm --filter @ledgerhq/ledger-button-webcomponent-poc",
    "doc": "pnpm --filter @ledgerhq/ledger-button-docs",
    "storybook:test": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm button exec nx build-storybook --quiet && pnpm button exec http-server storybook-static -p 4200 --silent\" \"wait-on tcp:4200 && pnpm button exec nx test-storybook\"",
    "prerelease": "pnpm nx run-many -t build --projects=ledger-button,ledger-button-core",
    "release": "pnpm nx release publish",
    "version:minor": "pnpm nx release version minor --git-tag",
    "version:major": "pnpm nx release version major --git-tag",
    "version:patch": "pnpm nx release version patch --git-tag",
    "version:prerelease": "pnpm nx release version prerelease --preid pre"
  },
